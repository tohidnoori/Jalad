<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.SettingActivity">

    <TextView
        android:id="@+id/soundTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5cdp"
        android:fontFamily="@font/cartoon1"
        android:gravity="center"
        android:text="Sound"
        android:textColor="#000000"
        android:textSize="@dimen/_30cdp" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/soundSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/soundTitle"
        android:layout_centerHorizontal="true"
        android:gravity="left"
        android:textSize="@dimen/_25cdp"
        android:thumb="@drawable/thumb"
        app:track="@drawable/track" />

    <TextView
        android:id="@+id/MusicTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/soundSwitch"
        android:fontFamily="@font/cartoon1"
        android:gravity="center"
        android:text="Music"
        android:textColor="#000000"
        android:layout_marginTop="@dimen/_20cdp"
        android:textSize="@dimen/_30cdp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150cdp"
        android:layout_below="@id/MusicTitle"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/musicTheme1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/nazanin"
            android:gravity="center"
            android:text="Theme 1"
            android:layout_marginLeft="@dimen/_5cdp"
            android:layout_marginRight="@dimen/_5cdp"
            android:textSize="@dimen/_30cdp" />
        <TextView
            android:id="@+id/musicTheme2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/_5cdp"
            android:layout_marginRight="@dimen/_5cdp"
            android:gravity="center"
            android:fontFamily="@font/nazanin"
            android:text="Theme 2"
            android:textSize="@dimen/_30cdp" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/rateUs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/_60cdp"
        android:layout_marginRight="@dimen/_60cdp"
        android:layout_marginBottom="@dimen/_40cdp"
        android:layout_weight="1"
        android:elevation="@dimen/_10cdp"
        android:outlineAmbientShadowColor="#736D6D"
        app:cardBackgroundColor="#FFD600"
        app:cardCornerRadius="@dimen/_10cdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5cdp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40cdp"
                android:layout_weight="1"
                android:src="@drawable/rating" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/cartoon1"
                android:gravity="center"
                android:text="Rate us"
                android:textColor="#000000"
                android:textSize="@dimen/_30cdp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>