<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_fail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_5cdp"
            android:layout_weight="1.0"
            android:fontFamily="@font/cartoon_bold"
            android:gravity="center"
            android:text="ای بابا باختی."
            android:textColor="#ff0c0c0c"
            android:textSize="@dimen/_30cdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@id/watchAd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_10cdp"
                android:layout_marginRight="@dimen/_10cdp"
                android:layout_weight="1.0"
                android:elevation="@dimen/_5cdp"
                app:cardBackgroundColor="#ffffffff"
                app:cardCornerRadius="@dimen/_10cdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_70cdp"
                        android:layout_weight="1.0"
                        android:src="@drawable/watch_video" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/arezvan"
                        android:gravity="center"
                        android:text="تبلیغ ببین"
                        android:textColor="#ff000000"
                        android:textSize="@dimen/_25cdp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/payMoneyChance"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_10cdp"
                android:layout_marginRight="@dimen/_10cdp"
                android:layout_weight="1.0"
                android:elevation="@dimen/_5cdp"
                app:cardBackgroundColor="#ffffffff"
                app:cardCornerRadius="@dimen/_10cdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_70cdp"
                        android:layout_weight="1.0"
                        android:src="@drawable/investment" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/arezvan"
                        android:gravity="center"
                        android:text="سکه بده"
                        android:textColor="#ff000000"
                        android:textSize="@dimen/_25cdp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_5cdp"
            android:layout_weight="1.0"
            android:onClick="playAgain"
            android:src="@drawable/repeat" />
    </LinearLayout>
</RelativeLayout>