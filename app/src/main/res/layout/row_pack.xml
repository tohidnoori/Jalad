<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_10cdp"
    android:elevation="@dimen/_5cdp"
    app:cardCornerRadius="@dimen/_15cdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/packImageCard"
            android:layout_width="@dimen/_80cdp"
            android:layout_height="@dimen/_80cdp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/_10cdp"
            app:cardCornerRadius="@dimen/_10cdp">

            <ImageView
                android:id="@+id/packImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/packName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_5cdp"
            android:layout_toRightOf="@+id/packImageCard"
            android:fontFamily="@font/bmitrabold"
            android:gravity="center"
            android:text="کتب"
            android:textSize="@dimen/_25cdp" />


        <TextView
            android:id="@+id/packEnable"
            android:layout_width="@dimen/_100cdp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/byekan"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#979E9D"
            android:padding="@dimen/_5cdp"
            android:visibility="gone"
            android:text="فعال کن"
            android:textSize="@dimen/_20cdp" />


        <LinearLayout
            android:id="@+id/buyPack"
            android:layout_width="@dimen/_100cdp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="#FFDF00"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/packPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:padding="@dimen/_5cdp"
                android:text="100"
                android:textSize="@dimen/_20cdp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30cdp"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:src="@drawable/little_coin" />

        </LinearLayout>

    </RelativeLayout>


</androidx.cardview.widget.CardView>